@page
@model IntroduccionRazor.Pages.Tarea1.programa1Model
@{
    ViewData["Title"] = "Cálculo del Índice de Masa Corporal (IMC)";
}

<h1>Cálculo del Índice de Masa Corporal (IMC)</h1>
<form method="post">
    <label for="peso">Peso (kg):</label>
    <input type="number" step="0.1" id="peso" name="Peso" required />
    <br />
    <label for="altura">Altura (cm):</label>
    <input type="number" step="0.1" id="altura" name="AlturaCm" required />
    <br />
    <button type="submit">Calcular IMC</button>
</form>

@if (Model.IMCCalculado)
{
    <p>Peso: @Model.Peso kg</p>
    <p>Altura: @Model.AlturaCm cm</p>
    <p>IMC: @Model.IMC</p>
    <p>Clasificación: @Model.Clasificacion</p>
}
