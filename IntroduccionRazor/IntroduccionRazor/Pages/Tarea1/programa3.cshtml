@page
@model IntroduccionRazor.Pages.Tarea1.programa3Model
@{
    ViewData["Title"] = "Evaluación de la Expresión (a * x + b * y)^n";
}

<h1>Evaluación de la Expresión (a * x + b * y)^n</h1>

<form method="post">
    <label for="a">Valor de a:</label>
    <input type="number" step="0.1" id="a" name="A" required />
    <br />
    <label for="b">Valor de b:</label>
    <input type="number" step="0.1" id="b" name="B" required />
    <br />
    <label for="x">Valor de x:</label>
    <input type="number" step="0.1" id="x" name="X" required />
    <br />
    <label for="y">Valor de y:</label>
    <input type="number" step="0.1" id="y" name="Y" required />
    <br />
    <label for="n">Valor de n:</label>
    <input type="number" id="n" name="N" required />
    <br />
    <button type="submit">Evaluar Expresión</button>
</form>

@if (Model.ResultadoCalculado)
{
    <p>(@Model.A * @Model.X + @Model.B * @Model.Y) ^ @Model.N = @Model.Resultado</p>
}
