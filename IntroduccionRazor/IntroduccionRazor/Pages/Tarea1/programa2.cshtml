@page
@model IntroduccionRazor.Pages.Tarea1.programa2Model
@{
    ViewData["Title"] = "Codificación y Decodificación de Mensajes";
}

<h1>Codificación y Decodificación de Mensajes</h1>

<form method="post">
    <label for="mensaje">Mensaje:</label>
    <input type="text" id="mensaje" name="Mensaje" required />
    <br />
    <label for="n">N (Posiciones de desplazamiento):</label>
    <input type="number" id="n" name="N" min="1" max="25" required />
    <br />
    <button type="submit" formaction="?handler=Codificar">Codificar</button>
    <button type="submit" formaction="?handler=Decodificar">Decodificar</button>
</form>

@if (Model.EsCodificado)
{
    <p>Mensaje Original: @Model.Mensaje</p>
    <p>Mensaje Transformado: @Model.MensajeCodificado</p>
}